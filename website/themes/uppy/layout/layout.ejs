      </header>

      <main class="MainContent js-MainContent" id="main">
        <% if (page.blog_index) { %>
          <%- partial('partials/blog') %>
        <% } else { %>
          <%- body %>
        <% } %>
      </main>

      <%- partial('partials/ga') %>

      <% if (!isIndex) { %>
        <script src="/js/smooth-scroll.min.js"></script>
      <% } %>
      <script src="/js/common.js"></script>

      <!-- Twitter follow button script -->
