{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "NodeNext",
    "declaration": true,
    "target": "es2022",
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "types": []
  },
  "include": ["src/**/*", "test/**/*"]
}
