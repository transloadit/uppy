{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "target": "es2022",
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"]
}
