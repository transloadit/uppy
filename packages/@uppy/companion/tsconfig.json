{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "Node16",
    "moduleResolution": "node16",
    "declaration": true,
    "target": "es2022",
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
}
