{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["@uppy/components#build"],
      "inputs": [
        "src/**/*.{js,ts,jsx,tsx}",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json"
      ],
      "outputs": ["lib/**"]
    },
    "build:css": {
      "dependsOn": ["build", "@uppy/components#build:css"],
      "inputs": ["../components/dist/styles.css"],
      "outputs": ["dist/styles.css"]
    }
  }
}
